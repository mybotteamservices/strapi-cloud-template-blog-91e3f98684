{
  "kind": "collectionType",
  "collectionName": "banners",
  "info": {
    "singularName": "banner",
    "pluralName": "banners",
    "displayName": "banner",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "chat-feature-announcement",
        "call-feature-announcement",
        "character-feature-announcement",
        "release-announcement",
        "general-announcement",
        "outage-announcement"
      ],
      "required": true
    },
    "location": {
      "type": "enumeration",
      "enum": [
        "landing",
        "app"
      ],
      "default": "app"
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "callToAction": {
      "type": "component",
      "repeatable": false,
      "component": "shared.call-to-action"
    },
    "secondaryAction": {
      "type": "component",
      "repeatable": false,
      "component": "shared.call-to-action"
    },
    "theme": {
      "type": "enumeration",
      "enum": [
        "primary",
        "success",
        "danger",
        "caution",
        "default"
      ]
    },
    "expirationTImestamp": {
      "type": "datetime"
    },
    "targetPage": {
      "type": "enumeration",
      "enum": [
        "chat",
        "characters",
        "wallet",
        "profile"
      ]
    },
    "active": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "caption": {
      "type": "text",
      "required": true
    },
    "variant": {
      "type": "enumeration",
      "enum": [
        "standard",
        "popup"
      ]
    },
    "visibilityLevel": {
      "type": "enumeration",
      "enum": [
        "member",
        "visitor",
        "user"
      ]
    },
    "bullets": {
      "type": "component",
      "repeatable": true,
      "component": "shared.bullet-point"
    },
    "placement": {
      "type": "enumeration",
      "enum": [
        "global",
        "character-section"
      ]
    }
  }
}
